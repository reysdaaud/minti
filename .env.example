# Frontend (Next.js) Environment Variables
# Used in client-side code, typically in .env.local

# Your Paystack Public Key (pk_test_... or pk_live_...)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=
# URL for your payment backend server (e.g., http://localhost:5000 or your deployed backend URL)
NEXT_PUBLIC_PAYMENT_BACKEND_URL=http://localhost:5000


# Backend (server.js) Environment Variables
# Used in server-side code (server.js), typically in .env (if server.js is in root) or .env.local

# Firebase Admin SDK Configuration
FIREBASE_PROJECT_ID=
# Firebase Admin SDK Private Key (ensure to handle newlines correctly, e.g., replace \n with actual newlines)
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Paystack Configuration
# Your Paystack Secret Key (sk_test_... or sk_live_...). KEEP THIS SECRET.
PAYSTACK_SECRET_KEY=

# (Optional) Port for the backend server (server.js)
# Defaults to 5000 if not set
PORT=5000

# (Optional) Default Paystack Callback URL if not dynamically determined by the backend
# Example: PAYSTACK_CALLBACK_URL=http://localhost:9002/payment/callback
PAYSTACK_CALLBACK_URL=
